@using System.Security.Principal

<ul id="signin" class="navbar-nav">
  @if (User.Identity.IsAuthenticated) {
    <li class="nav-item d-flex">
      <span id="user-welcome" class="navbar-text text-dark justify-content-center">Welcome @User.FindFirst("name").Value</span>
    </li>
    <li class="nav-item">
      <a class="btn" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignOut">Sign out</a>
    </li>
  }
  else {
    <li class="nav-item">
      <a class="btn" asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignIn">Sign in</a>
    </li>
  }
</ul>